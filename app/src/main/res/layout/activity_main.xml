<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/button"
            android:onClick="play"
            android:tag="canyoutakemetoairportplease"
            android:text="Can you take \n me to the \n airport, please?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button1"
            android:onClick="play"
            android:tag="howmuchwillitbe"
            android:text="How much will it\n be?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />


        <Button
            android:id="@+id/button2"
            android:onClick="play"
            android:tag="isitfarfromhere"
            android:text="Is it far \nfrom here?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:onClick="play"
            android:tag="itsstraighton"
            android:text="It's straight\n on."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:onClick="play"
            android:tag="stop"
            android:text="Stop!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:onClick="play"
            android:tag="takemethereplease"
            android:text="Take me there,\nplease."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:onClick="play"
            android:tag="taxi"
            android:text="Taxi!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:onClick="play"
            android:tag="yougoleft"
            android:text="You go left."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />


    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>